{
  "name": "Links Disabler",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "version": "1.1",
  "description": "A lightweight extension which lets you disable all links on a webpage.",
  "permissions": ["activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {},
  "commands": {
    "toggle-links": {
      "suggested_key": {
        "default": "Alt+Shift+D"
      },
      "description": "Disable/Enable links"
    }
  },
  "manifest_version": 2
}