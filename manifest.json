{
  "version": "1.3.0",
  "name": "Links Disabler",
  "description": "A lightweight extension which lets you disable all links on a webpage.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["content.js"]
  }],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "browser_action": {},
  "commands": {
    "toggle-links": {
      "suggested_key": {
        "default": "Alt+Shift+D"
      },
      "description": "Disable/Enable links"
    }
  },
  "manifest_version": 2
}